<h1>Enter a Book </h1>
<% if @new_book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@new_book.errors.count, "error") %> prohibited this book from being saved:</h2>

    <ul>
    <% @new_book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_tag '/books' , method: :post do %>
    <div class="form-group">
        <%= label_tag :form_book_title, 'Title:' %>
            <%= text_field_tag :form_book_title, @new_book.title %>
    </div>
    <div class="form-group">
        <%= label_tag :form_author, 'Author:' %>
            <%= text_field_tag :form_author, @new_book.author %>
    </div>
    <div class="form-group">
        <%= label_tag :form_price, 'Price' %>
            <%= text_field_tag :form_price, @new_book.price %>
    </div>
    <div class="form-group">
        <%= label_tag :form_publisher, 'Publisher' %>
            <%= text_field_tag :form_publisher, @new_book.publisher %>
    </div>
    <div class="form-group">
        <%= label_tag :form_image, 'Image' %>
            <%= text_field_tag :form_image %>
    </div>
    <div class="form-group">
        <%= label_tag :form_date_published, 'Publishing Date' %>
            <%= text_field_tag :form_date_published, @new_book.date_published %>
    </div>
    <div class="form-group">
        <%= label_tag :form_genre, 'Genre' %>
            <%= text_field_tag :form_genre, @new_book.genre %>
    </div>
    <div class="form-group">
        <%= label_tag :form_description, 'Summary' %>
            <%= text_field_tag :form_description, @new_book.description %>
    </div>
    <div>
        <%= submit_tag 'Create' %>
    </div>
    <% end %>
