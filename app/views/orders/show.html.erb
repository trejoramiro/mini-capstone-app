<h1> Order Confirmation </h1>
<h3>ID: <%= @order.id %></h3>
<h3>Subtotal: <%= number_to_currency(@order.subtotal) %></h3>
<h3>Tax: <%= number_to_currency(@order.tax) %></h3>
<h3>Order Total: <%= number_to_currency(@order.total) %></h3>
<h3>Quantity: <%=  @order.quantity %></h3>
<hr>
<h2>Products</h2>

<% @order.carted_products.each do |cp| %>
  <p><%= cp.book.title %></p>
  <p>Price: <%= number_to_currency(cp.book.price) %></p>
  <p>Quantity: <%= cp.quantity %> </p>
<% end %>
